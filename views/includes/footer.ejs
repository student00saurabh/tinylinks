<!-- Offline Banner -->
<div id="offline-banner" class="hidden fixed top-16 left-1/2 transform -translate-x-1/2 w-11/12 max-w-lg bg-red-600 text-white text-center p-4 rounded-xl shadow-lg z-50 backdrop-blur-sm">
  <h5 class="font-semibold text-lg mb-1">üîå Connection Lost</h5>
  <p class="text-sm opacity-90">Your device is offline. Please check your internet connection.</p>
</div>

<div id="offline-overlay" class="hidden fixed inset-0 bg-black/20 backdrop-blur-sm z-40 pointer-events-auto"></div>

<script>
function disableInteractionWhenOffline() {
  const banner = document.getElementById("offline-banner");
  const overlay = document.getElementById("offline-overlay");

  if (!navigator.onLine) {
    banner.classList.remove("hidden");
    overlay.classList.remove("hidden");

    // Disable interactions
    document.querySelectorAll("a, button, input[type='submit'], form").forEach(el => {
      el.addEventListener("click", preventOfflineAction, true);
      el.addEventListener("submit", preventOfflineAction, true);
    });

    window.onbeforeunload = () => "You're currently offline. Reload may not work properly.";
  } else {
    banner.classList.add("hidden");
    overlay.classList.add("hidden");

    document.querySelectorAll("a, button, input[type='submit'], form").forEach(el => {
      el.removeEventListener("click", preventOfflineAction, true);
      el.removeEventListener("submit", preventOfflineAction, true);
    });

    window.onbeforeunload = null;
  }
}

function preventOfflineAction(e) {
  if (!navigator.onLine) {
    e.preventDefault();
    alert("‚ö†Ô∏è You are offline. This action is disabled until you're back online.");
  }
}

window.addEventListener("load", disableInteractionWhenOffline);
window.addEventListener("online", disableInteractionWhenOffline);
window.addEventListener("offline", disableInteractionWhenOffline);
</script>

