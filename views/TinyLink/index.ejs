<% layout("/layouts/boilerplate") -%>

<!-- hero section -->
<section class="bg-gray-50 dark:bg-gray-900 py-20 text-center transition-all">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-white">
      Welcome to <span class="text-green-600 dark:text-green-400">TinyLinks</span>
    </h1>
    <p class="mt-4 text-gray-600 dark:text-gray-200 text-lg md:text-xl">
      Smart, secure and customizable URL shortener for everyone.
    </p>

    <div class="mt-8">
      <a href="/signup"
        class="bg-green-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-green-700 dark:hover:bg-green-500 transition-all">
        Get Started
      </a>
    </div>
  </div>
</section>

<!-- counter section -->
<section class="py-16 bg-white dark:bg-gray-800 transition-all">
  <div class="container mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">

    <div class="p-8 rounded-xl shadow-md bg-gray-50 hover:text-white text-gray-700 dark:bg-gray-700 hover:bg-green-500 dark:hover:bg-green-900 hover:shadow-xl transition-all">
      <h3 class="text-4xl font-bold text-green-800 dark:text-green-400 counter" data-target="<%= totalUrls %>">0</h3>
      <p class="mt-2 dark:text-gray-200 font-medium">URLs Shortened</p>
    </div>

    <div class="p-8 rounded-xl shadow-md bg-gray-50 hover:text-white text-gray-700 dark:bg-gray-700 hover:bg-green-500 dark:hover:bg-green-900 hover:shadow-xl transition-all">
      <h3 class="text-4xl font-bold text-green-800 dark:text-green-400 counter" data-target="<%= totalUsers %>">0</h3>
      <p class="mt-2 dark:text-gray-200 font-medium">Registered Users</p>
    </div>

    <div class="p-8 rounded-xl shadow-md bg-gray-50 hover:text-white text-gray-700 dark:bg-gray-700 hover:bg-green-500 dark:hover:bg-green-900 hover:shadow-xl transition-all">
      <h3 class="text-4xl font-bold text-green-800 dark:text-green-400 counter" data-target="<%= totalClicks %>">0</h3>
      <p class="mt-2 dark:text-gray-200 font-medium">Total Clicks Tracked</p>
    </div>

  </div>
</section>

