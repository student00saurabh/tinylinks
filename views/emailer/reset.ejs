<% layout("/layouts/boilerplate") -%>

<div class="min-h-screen flex items-center justify-center 
            bg-gradient-to-r from-green-300 via-green-50 to-green-200 
            dark:bg-gradient-to-r dark:from-gray-900 dark:via-gray-800 dark:to-gray-900
            px-4 transition-all">

  <div class="w-full max-w-md">

    <!-- Card -->
    <div class="bg-white/30 dark:bg-gray-600/40 backdrop-blur-lg 
                rounded-2xl shadow-lg p-8 border 
                border-white/30 dark:border-gray-700/40 
                transition-all duration-300">

      <!-- Title -->
      <h1 class="text-center text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4">
        Create New Password
      </h1>

      <!-- Description -->
      <p class="text-gray-700 dark:text-gray-300 text-sm mb-6 leading-relaxed text-center">
        Set a strong new password. Use uppercase letters, numbers, and special characters for better security.
      </p>

      <!-- Form -->
      <form 
        action="/reset-password/<%= token %>" 
        method="POST" 
        class="space-y-5"
        novalidate
      >
        
        <!-- New Password Field -->
        <div>
          <label for="password" class="block font-medium text-gray-700 dark:text-gray-300 mb-1">
            New Password
          </label>

          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your new password"
            required
            class="w-full px-4 py-2 rounded-xl border 
                   border-gray-300 dark:border-gray-600 
                   bg-white dark:bg-gray-800 
                   text-gray-800 dark:text-gray-200
                   focus:border-green-500 focus:ring-1 focus:ring-green-300 
                   outline-none transition"
          />

          <p class="text-red-500 text-sm mt-1 hidden invalid-feedback">
            Please enter a valid password.
          </p>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full py-2 bg-green-500 hover:bg-green-600 
                 dark:bg-green-600 dark:hover:bg-green-500
                 text-white font-semibold rounded-2xl 
                 transition-all duration-300 shadow-md"
        >
          Reset Password
        </button>
      </form>

      <!-- Divider -->
      <div class="my-6 border-t border-gray-300 dark:border-gray-700"></div>

      <!-- Support -->
      <p class="text-center text-sm text-gray-700 dark:text-gray-300">
        Need assistance?
        <a href="/thecubicals/contact" 
           class="text-green-500 dark:text-green-400 font-semibold hover:underline">
          Contact our support team
        </a>.
      </p>

    </div>
  </div>
</div>
