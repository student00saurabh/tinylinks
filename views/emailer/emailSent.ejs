<% layout("/layouts/boilerplate") -%>

<div class="min-h-screen flex items-center justify-center 
            bg-gradient-to-r from-green-300 via-green-50 to-green-200 
            dark:bg-gradient-to-r dark:from-gray-900 dark:via-gray-800 dark:to-gray-900
            px-4 transition-all">

  <div class="w-full max-w-md">

    <!-- Card -->
    <div class="bg-white/30 dark:bg-gray-600/40 backdrop-blur-lg 
                rounded-2xl shadow-lg p-8 border 
                border-white/30 dark:border-gray-700/40 
                transition-all duration-300">

      <!-- Header -->
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100">
          Reset Password
        </h1>

        <% if (message && !alertmsg) { %>
          <p class="mt-2 text-yellow-500 text-sm"><%= message %></p>
        <% } else if (message) { %>
          <p class="mt-2 text-red-500 text-sm"><%= message %></p>
        <% } %>
      </div>

      <!-- Description -->
      <p class="text-gray-700 dark:text-gray-300 text-sm mb-6 leading-relaxed text-center">
        Enter the email you used at registration and weâ€™ll send you a secure reset link.
      </p>

      <!-- Form -->
      <form action="/forgot-password" method="POST" class="space-y-5">

        <!-- Email -->
        <div>
          <label for="email" class="block font-medium mb-1 text-gray-700 dark:text-gray-300">
            Email Address
          </label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="you@example.com"
            required
            class="w-full px-4 py-2 rounded-xl border 
                   border-gray-300 dark:border-gray-600 
                   bg-white dark:bg-gray-800 
                   text-gray-800 dark:text-gray-200
                   focus:border-green-500 focus:ring-1 focus:ring-green-300 
                   outline-none transition"
          />
        </div>

        <!-- Button -->
        <button
          type="submit"
          class="w-full py-2 bg-green-500 hover:bg-green-600 
                 dark:bg-green-600 dark:hover:bg-green-500
                 text-white font-semibold rounded-2xl 
                 transition-all duration-300">
          Send Reset Link
        </button>
      </form>

      <!-- Back to Login -->
      <p class="mt-6 text-center text-gray-700 dark:text-gray-300 text-sm">
        <a href="/login" 
           class="text-green-500 dark:text-green-400 font-semibold hover:underline">
          Back to Login
        </a>
      </p>
    </div>
  </div>
</div>
