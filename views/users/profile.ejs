<% layout("layouts/boilerplate") %>

<div class="min-h-screen flex items-center justify-center 
            bg-gradient-to-r from-green-100 via-green-50 to-white 
            dark:from-gray-900 dark:via-gray-950 dark:to-black 
            px-4 py-10">

  <div class="w-full max-w-xl">

    <!-- Profile Card -->
    <div class="bg-white/30 dark:bg-white/10 backdrop-blur-xl 
                rounded-3xl shadow-xl p-8 
                border border-white/40 dark:border-white/10 
                transition-all duration-300 
                hover:shadow-2xl hover:scale-[1.01]">

      <!-- Avatar -->
      <div class="flex flex-col items-center mb-6">
        <div class="w-24 h-24 bg-gradient-to-tr from-green-400 to-blue-500 
                    rounded-full shadow-md flex items-center justify-center 
                    text-4xl font-bold text-white">
          <%= User.name ? User.name.charAt(0).toUpperCase() : User.username.charAt(0).toUpperCase() %>
        </div>

        <h2 class="mt-4 text-2xl font-bold text-gray-700 dark:text-gray-100">
          <%= User.name %>
        </h2>

       
      </div>

      <!-- User Details -->
      <div class="space-y-4 mb-6">
        <div class="flex justify-between">
          <span class="font-medium text-gray-600 dark:text-gray-300">Full Name:</span>
          <span class="text-gray-800 dark:text-gray-100"><%= User.name %></span>
        </div>

        <div class="flex justify-between">
          <span class="font-medium text-gray-600 dark:text-gray-300">Email:</span>
          <span class="text-gray-800 dark:text-gray-100"><%= User.email %></span>
        </div>
      </div>

      <!-- Buttons -->
      <div class="flex gap-3 flex-col md:flex-row">

        <a href="/logout"
          class="flex-1 bg-red-500 hover:bg-red-600 
                 dark:bg-red-500 dark:hover:bg-red-600 
                 text-white py-3 rounded-xl font-semibold text-center transition">
          Logout
        </a>
      </div>

    </div>

    <!-- Bottom Quick Stats -->
    <div class="mt-6 bg-white/30 dark:bg-white/10 backdrop-blur-xl 
                rounded-2xl p-6 shadow-md 
                border border-white/30 dark:border-white/10 text-center">

      <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-2">
        ðŸ’« Quick Stats
      </h3>

      <p class="text-gray-600 dark:text-gray-300">
        Total Links Created: 
        <span class="font-bold text-gray-900 dark:text-gray-100"><%= totalLinks || 0 %></span>
      </p>

      <p class="text-gray-600 dark:text-gray-300">
        Total Clicks Received: 
        <span class="font-bold text-gray-900 dark:text-gray-100"><%= totalClicks || 0 %></span>
      </p>

      <a href="/stats" 
         class="mt-4 inline-block text-blue-600 hover:text-blue-800 
                dark:text-blue-400 dark:hover:text-blue-500 
                font-medium transition">
        View Full Dashboard â†’
      </a>
    </div>

  </div>

</div>
