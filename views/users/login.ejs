<% layout("/layouts/boilerplate") -%>

<div class="min-h-screen flex items-center justify-center 
            bg-gradient-to-r from-green-300 via-green-50 to-green-200 
            dark:bg-gradient-to-r dark:from-gray-900 dark:via-gray-800 dark:to-gray-900
            px-4 transition-all">

  <div class="w-full max-w-md">
    <!-- Card -->
    <div class="bg-white/30 dark:bg-gray-600/40 backdrop-blur-lg 
                rounded-2xl shadow-lg p-8 border 
                border-white/30 dark:border-gray-700/40 
                transition-all duration-300">

      <!-- Heading -->
      <h1 class="text-3xl font-bold text-gray-800 dark:text-gray-100 text-center mb-6">
        Login
      </h1>

      <!-- Form -->
      <form action="/login" method="POST" class="space-y-5">

        <!-- Username -->
        <div>
          <label for="username" class="block font-medium mb-1 text-gray-700 dark:text-gray-300">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="example@gmail.com"
            required
            class="w-full px-4 py-2 rounded-xl border 
                   border-gray-300 dark:border-gray-600 
                   bg-white dark:bg-gray-800 
                   text-gray-800 dark:text-gray-200
                   focus:border-green-500 focus:ring-1 focus:ring-green-300 
                   outline-none transition"
          />
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block font-medium mb-1 text-gray-700 dark:text-gray-300">
            Password
          </label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="password"
            required
            class="w-full px-4 py-2 rounded-xl border 
                   border-gray-300 dark:border-gray-600 
                   bg-white dark:bg-gray-800 
                   text-gray-800 dark:text-gray-200
                   focus:border-green-500 focus:ring-1 focus:ring-green-300 
                   outline-none transition"
          />
        </div>

        <!-- Forgot Password -->
        <div class=" -mt-2">
          <a href="/forgot-password" 
             class="text-sm text-green-600 dark:text-green-400 hover:underline">
            Forgot password?
          </a>
        </div>

        <!-- Submit Button -->
        <button type="submit"
          class="w-full py-2 bg-green-500 hover:bg-green-600 
                 dark:bg-green-600 dark:hover:bg-green-500
                 text-white font-semibold rounded-2xl 
                 transition-all duration-300">
          Login
        </button>
      </form>



      <!-- Divider -->
<div class="flex items-center my-6">
  <div class="flex-1 border-t border-gray-300 dark:border-gray-600"></div>
  <span class="px-3 text-gray-600 dark:text-gray-300 text-sm">OR</span>
  <div class="flex-1 border-t border-gray-300 dark:border-gray-600"></div>
</div>

<!-- Google Login Button -->
<a
  href="/auth/google"
  class="w-full flex items-center justify-center gap-3 
         py-2 mt-2 bg-white dark:bg-gray-800 
         border border-gray-300 dark:border-gray-600 
         rounded-xl shadow-sm hover:shadow-md
         transition-all duration-300 text-gray-700 dark:text-gray-200 font-medium"
>
  <img src="https://www.svgrepo.com/show/475656/google-color.svg" 
       class="w-5 h-5 bg-transparent dark:bg-transparent" />
  Continue with Google
</a>



      <!-- Signup Link -->
      <p class="mt-4 text-center text-gray-700 dark:text-gray-300">
        Don't have an account?
        <a href="/signup" class="text-green-500 dark:text-green-400 font-semibold hover:underline">
          Signup here
        </a>
      </p>
    </div>
  </div>
</div>
