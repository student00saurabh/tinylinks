<% if(success && success.length) { %>
<div 
  class="max-w-md mx-auto mt-4 p-4 rounded-lg bg-green-100 border border-green-400 text-green-800 shadow-lg flex items-center justify-between space-x-4 animate-fadeIn"
  role="alert"
>
  <span class="flex-1 text-sm font-medium"><%= success %></span>
  <button 
    type="button" 
    class="text-green-800 hover:text-green-900 font-bold text-lg focus:outline-none"
    onclick="this.parentElement.remove()"
    aria-label="Close"
  >
    &times;
  </button>
</div>
<% } %>

<% if(error && error.length) { %>
<div 
  class="max-w-md mx-auto mt-4 p-4 rounded-lg bg-red-100 border border-red-400 text-red-800 shadow-lg flex items-center justify-between space-x-4 animate-fadeIn"
  role="alert"
>
  <span class="flex-1 text-sm font-medium"><%= error %></span>
  <button 
    type="button" 
    class="text-red-800 hover:text-red-900 font-bold text-lg focus:outline-none"
    onclick="this.parentElement.remove()"
    aria-label="Close"
  >
    &times;
  </button>
</div>
<% } %>

<!-- Optional Tailwind fade-in animation -->
<style>
@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(-10px); }
  100% { opacity: 1; transform: translateY(0); }
}
.animate-fadeIn {
  animation: fadeIn 0.4s ease forwards;
}
</style>
